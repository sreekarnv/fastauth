# Database
DATABASE_URL=sqlite:///./email_templates.db

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Verification
REQUIRE_EMAIL_VERIFICATION=true

# SMTP Configuration
# For development, use MailHog (localhost:1025) or a test SMTP server
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@example.com
SMTP_USE_TLS=false

# For Gmail (production):
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM_EMAIL=your-email@gmail.com
# SMTP_USE_TLS=true

# For SendGrid (production):
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USERNAME=apikey
# SMTP_PASSWORD=your-sendgrid-api-key
# SMTP_FROM_EMAIL=noreply@yourdomain.com
# SMTP_USE_TLS=true

# App Settings
APP_NAME=FastAuth Demo
